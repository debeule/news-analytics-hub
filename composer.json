{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-iconv": "*",
        "ext-pcntl": "*",
        "ext-pdo_mysql": "*",
        "ext-redis": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "ext-xmlreader": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "guzzlehttp/guzzle": "^7.8",
        "illuminate/contracts": "*",
        "laravel/framework": "^11.0",
        "laravel/horizon": "^5.21",
        "laravel/sanctum": "^3.2",
        "laravel/tinker": "^2.8",
        "predis/predis": "^2.2",
        "spatie/laravel-ray": "^1.33",
        "spatie/ray": "^1.40"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "folder": [
            "app/Helpers"
        ],
        "psr-4": {
            "App\\": "app/",
            "Http\\": "http/",
            "Console\\": "console/",
            "Database\\db\\Factories\\": "database/db/factories/",
            "Database\\db\\Seeders\\": "database/db/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "start": "composer setup && composer migrate",
        "testing": "composer testing:migrate && composer testing:seed",
        
        "setup": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php artisan key:generate --ansi"
        ],

        "migrate:processed": "php artisan migrate:fresh --path=database/processed/migrations--database=processed",
        "migrate:raw": "php artisan migrate:fresh --path=database/raw/migrations--database=raw",

        "migrate": ["composer migrate:processed", "composer migrate:raw"],

        "testing:migrate": [
            "php artisan migrate:fresh --path=database/processed/migrations/ --database=db-testing",
            "php artisan migrate:fresh --path=database/raw/migrations/ --database=kohera-testing"
        ],
        
        "phpunit": [
            "vendor/bin/phpunit --colors=always,'Feature','Integration'"
        ],

        "cs:check": "vendor/bin/phpcs --standard=PSR12 app",
        "cs:fix": "vendor/bin/php-cs-fixer fix --verbose",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=2G"
    }
}
