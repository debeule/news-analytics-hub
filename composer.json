{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.3",
        "ext-iconv": "*",
        "ext-pcntl": "*",
        "ext-pdo_mysql": "*",
        "ext-redis": "*",
        "ext-simplexml": "*",
        "ext-xml": "*",
        "ext-xmlreader": "*",
        "ext-zip": "*",
        "ext-zlib": "*",
        "guzzlehttp/guzzle": "^7.8",
        "laravel/framework": "^11.0",
        "laravel/horizon": "^5.21",
        "laravel/sanctum": "^4.0",
        "laravel/tinker": "^2.8",
        "league/uri": "^7.4"
    },
    "require-dev": {
        "fakerphp/faker": "^1.9.1",
        "friendsofphp/php-cs-fixer": "^3.54",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^8.0",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.0",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "folder": [
            "app/Helpers"
        ],
        "psr-4": {
            "App\\": "app/",
            "Http\\": "http/",
            "Console\\": "console/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/",
            "Database\\Scraper\\": "database/scraper/"
        }
    },
    "autoload-dev": {   
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,

    "scripts": {
        "start": "composer setup && php artisan migrate:fresh --seed",
        "testing": "php artisan migrate:fresh --database=db-testing",
        
        "setup": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "php artisan key:generate --ansi"
        ],
        
        "phpunit": [
            "vendor/bin/phpunit --colors=always,'Feature','Integration'"
        ],

        "cs:check": "vendor/bin/phpcs --standard=PSR12 app",
        "cs:fix": "vendor/bin/php-cs-fixer fix --verbose",
        "phpstan": "vendor/bin/phpstan analyse --memory-limit=2G"
    }
}
